<h1><strong>Tu Cocktail</strong></h1>
<h3 align="center"><%= @cocktail.name %></h3><ul>
<%= cl_image_tag @cocktail.photo, height: 300, width: 400, crop: :fill %>

<% @cocktail.doses.each do |dose| %>
<p><%= dose.description %></p>
<%= dose.ingredient.name %>
<%= link_to  dose_path(dose),method: :delete, data: { confirm: "Are you sure?" } do %>
 <div align="left">
   <i class="fas fa-trash-alt" ></i>
 </div>
<% end %>
<% end %>
</ul>
<%= link_to "Agregar dosis", new_cocktail_dose_path(@cocktail)  %>
<%= link_to "Volver", cocktails_path, class:"btn btn-dark" %>
